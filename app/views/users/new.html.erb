<h1>ユーザー登録</h1>
<% if @user.errors.any? %>
  <div id="error_explanation">
    <h2><%= @user.errors.count %><%= t('.errors') %></h2>
    <ul>
    <% @user.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
    </ul>
  </div>
<% end %>
<%= form_with(model: @user, local: true) do |f| %>  
  <p>
  <%= f.label :メールアドレス %>
  <%= f.email_field :email %>
  </P>
  <P>
  <%= f.label :パスワード %>
  <%= f.password_field :password %>
  </P>
  <P>
  <%= f.label :パスワード確認 %>
  <%= f.password_field :password_confirmation %>
  </P>
  <br>
  <%= f.submit "登録する" %>
<% end %>