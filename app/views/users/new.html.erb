<h1>ユーザー登録</h1>
<%= form_with(model: @user, local: true) do |f| %>
  <% if @user.errors.any? %>
    <div id="error_explanation">
      <h2><%= @user.errors.count %><%= t('.errors') %></h2>
      <ul>
      <% @user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <p>
  <%= f.label :メールアドレス %>
  <%= f.email_field :email %>
  </P>
  <P>
  <%= f.label :パスワード %>
  <%= f.password_field :password %>
  </P>
  <P>
  <%= f.label :パスワード確認 %>
  <%= f.password_field :password_confirmation %>
  </P>
  <P>
  <%= f.label :ユーザー種別 %>
  <%= f.select :role, User.roles.keys.to_a, include_blank: "選択してください" %>
  </P>
  <br>
  <%= f.submit "登録する" %>
<% end %>